<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Mluserinputs</h1>
    <%= link_to 'New User Input', new_mluserinput_path, class: "bg-green-500 hover:bg-green-600 text-white font-bold py-2 px-4 rounded-md border-2 border-green-500 transition duration-200 ease-in-out" %>
  </div>

  <div id="mluserinputs" class="min-w-full">
    <%= render @mluserinputs %>
  </div>
</div>
