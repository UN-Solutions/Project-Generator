<div id="<%= dom_id awareness %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= awareness.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Subject:</strong>
    <%= awareness.subject %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Subtopics:</strong>
    <%= awareness.subtopics %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this awareness", awareness, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this awareness', edit_awareness_path(awareness), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
